<?xml version="1.0" encoding="UTF-8"?>
<root>
    <attribute class="z.world.blocks.caesar.MarketIso">
        <fields>
            <!--没有type属性时将使用json默认解析, txt内容为libgdx-json数据-->
            <size type="int">{size:2}</size>
            <!--建造和升级时间消耗-->
            <buildCost>{buildCost: [ 300, 360, 420, 480, 600, 600]}</buildCost>
            <!--生命值数据-->
            <health>{health: [ 300, 360, 420, 480, 600, 660]}</health>

            <!--WorkBlock begon-->
            <!--工作需要农民数量-->
            <needPeasants>{needPeasants: [ 2, 3, 3, 4, 5, 5]}</needPeasants>
            <!--提供工作工人数量-->
            <forWork>{forWork: [ 1, 1, 1, 1, 1, 1]}</forWork>
            <!--携带生产物品最大数量数量-->
<!--            <carryItemDump>{carryItemDump: [ 2, 2, 3, 4, 5, 5]}</carryItemDump>-->
            <!--携带生产需要物品最大数量数量-->
            <carryItemObtain>{carryItemObtain: [ 8, 10, 12, 14, 16, 18]}</carryItemObtain>
            <!--WorkBlock end-->

            <!--Market begon-->
            <!--储存生产单位倍数-->
            <consumesMultiple>{consumesMultiple: [ 3, 4, 4, 5, 5, 6]}</consumesMultiple>
            <!--销售物品物品-->
            <needItems>{ needItems: [
                    { item: Items.wheat, amount: 2 },
                    { item: Items.vegetables, amount: 2 },
                    { item: Items.furniture, amount: 2 },
                    { item: Items.fruit, amount: 2 },
                    { item: Items.oil, amount: 2 },
                    { item: Items.wine, amount: 2 },
                    { item: Items.meat, amount: 2 },
                    { item: Items.pottery, amount: 2 },
                ]}
            </needItems>
            <!--Market end-->
        </fields>

        <!--自定义执行function-->
        <methods>
            <!--建造升级需要物品-->
            <requirements method="requirements" paramsCount="3">
                <param1 class="Category">{ value: effect }</param1>
                <param2 class="ItemStack[][]">
                    [
                    [ { item: Items.copper, amount: 10 } ],
                    [ { item: Items.copper, amount: 10 } ],
                    [ { item: Items.copper, amount: 10 } ],
                    [ { item: Items.copper, amount: 10 } ],
                    [ { item: Items.copper, amount: 10 } ],
                    [ { item: Items.copper, amount: 10 } ],
                    ]
                </param2>
                <param3>{ class: java.lang.Boolean, value: false }</param3>
            </requirements>
        </methods>

    </attribute>

    <animation>
        <caesar>
            <node frame="9" offset="0,30">market-ani1x</node>
        </caesar>
    </animation>

</root>
